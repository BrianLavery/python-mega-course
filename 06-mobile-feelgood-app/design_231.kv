# Things in <> symbols are rules
# Most of the other elements in CamelCase are Classes
<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                hint_text: "Username"
            TextInput:
                hint_text: "Password"
            Button:
                text: "Login"
        GridLayout:
            cols: 2
            Button:
                text: "Forgot password?"
            Button:
                text: "Sign up"
                on_press: root.sign_up() # Root here refers to root class (login class for this position)

<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up for a space journey!"
        TextInput:
            hint_text: "Username"
        TextInput:
            hint_text: "Password"
        Button:
            text: "Submit"

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"