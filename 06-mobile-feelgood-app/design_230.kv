# Things in <> symbols are rules
# Most of the other elements in CamelCase are Classes
<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                hint_text: "Username"
